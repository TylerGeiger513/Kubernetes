
### .env

# Global Environment Variables
HOST=0.0.0.0
DOMAIN=localhost
BACKEND_PORT=3000
FRONTEND_PORT=8080
WS_PORT=3001
WS_PATH=/ws

# MongoDB Configuration
MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_DB=campusconnect_db
MONGO_URI=mongodb://mongo:27017/campusconnect_db

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=super_secret_password
REDIS_URI=redis://redis:6379

# Session Secret
SESSION_SECRET=super_secret_key

# Logging
LOG_LEVEL=info

# NGINX Upstream settings (for templating)
NGINX_BACKEND_UPSTREAM=backend:${BACKEND_PORT}
NGINX_FRONTEND_UPSTREAM=frontend:${FRONTEND_PORT}
CORS_ORIGIN=http://localhost:8080
CORS_SAME_SITE=lax
CORS_SECURE=false
COOKIE_SECURE=false